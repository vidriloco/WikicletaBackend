<div id="<%= status %>-modal" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="myModalLabel">Pregunta</h3>
	</div>
	<div class="modal-body">
		<div class="form-horizontal">	
			<% if bike_status.persisted? %>
				<%= form_for [bike, bike_status], :method => :put, :remote => true do |f| %>
					<%= render :partial => "bike_statuses/#{status}_form", :locals => {:bike => bike, :f => f, :status => bike_status, :status_category => status} %>
				<% end %>
			<% else %>
				<%= form_for [bike, BikeStatus.new], :remote => true do |f| %>
						<%= render :partial => "bike_statuses/#{status}_form", :locals => {:bike => bike, :f => f, :status => bike_status, :status_category => status} %>
				<% end %>
			<% end %>
		</div>
	</div>
	
	
</div>