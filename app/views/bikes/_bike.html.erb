<div id="<%= bike.id %>" class="bike board rounded-5 shadow-light">
	<h3><%= link_to bike.name, bike_path(bike) %></h3>
	<p class="brand"><%= bike.brand %></p>
	<div class="owner">	
		<% if showing_bike_owner %>
			<% if current_user_equals(@user) %>
				<span>Tu bici</span>
			<% else %>
				<span><%= t('bikes.views.show.owned_by') %><%= contact_for(bike) %><% sharing_for(bike) %></span>
			<% end %>
		<% end %>
	</div>
	<div class="photo">
		<% if bike.front_picture.nil? %>
			<%= link_to image_tag('thumb_no_bike.png'), bike_path(bike) %>
		<% else %>
			<%= link_to image_tag(bike.front_picture.image.thumb.url), bike_path(bike) %>
		<% end %>
	</div>
	<div class="status">
		<p class="to-left">
			<%= render :partial => 'bikes/likes_count', :locals => {:bike => bike } %>
		</p>
		<p class="comments to-right"><span class="count"><%= bike.comments.count %></span>
			<a href="<%= bike_path(bike)%>#comments"><%= t("bikes.views.show.comments.#{bike.comments.count == 1 ? 'one' : 'some'}") %></a>
		</p>
		<div class="clear"></div>
	</div>
	<% %>
</div>