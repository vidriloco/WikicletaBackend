<div id="section-bikes">
	<div id="<%= @bike.id %>">
		<div class="bike-details shadow-light centered">
			<div class="row-fluid">
				<div class="pull-right">
					<h1 class="inlined"><%= @bike.name %></h1>
				</div>
				<div class="pull-left">
					<ul class="nav nav-pills">
			    	<li><%= link_to t('actions.back_arrow').html_safe, bikes_path, :class => 'back' %></li>
						<% if current_user_owns_bike?(@bike) %>
							<li class="active"><%= link_to t('bikes.views.show.modify'), edit_bike_path(@bike) %></li>
						<% end %>
			    </ul>
					
				</div>
			</div>
			
				<div class="row-fluid">
					<div class="pull-right">
						<span class="owner">
							<%= t('bikes.views.show.owned_by') %><%= contact_for(@bike) %>
						</span>
					</div>
				</div>
			
		</div>

		<div class="bike-photos imageable-photos shadow-light centered">
			<%= render :partial => "bikes/pictures", :locals => {:bike => @bike } %>
			<%= render :partial => "pictures/management_panel", :locals => {:bike => @bike} %>
		</div>
	
		<div class="bike-description shadow-light centered">
			<p class="main">
				<%= @bike.description %>
			</p>
			<div class="row-fluid">
				<div class="status rounded-10 pull-right">
					<%= render :partial => 'bikes/likes_count', :locals => {:bike => @bike } %>
				</div>
			</div>
		</div>
	
		<div class="bike-statuses shadow-light centered">
			<%= render :partial => 'bike_statuses/index', :locals => { :bike => @bike } %>
		</div>

		<div class="bike-comments sheet shadow-light centered">
			<%= render :partial => 'comments/index', :locals => { :commentable => @bike } %>
		</div>
	</div>

	<div class="hidden">
		<div id="url"><%= bike_pictures_path(@bike) %></div>
		<div id="url-reload"><%= bike_path(@bike) %></div>
		<div id="token"><%= form_authenticity_token %></div>
	</div>
</div>