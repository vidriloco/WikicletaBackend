<div id="<%= cycling_group.slug %>" 
	data-url="<%= discover_cycling_groups_url.concat('#/').concat(cycling_group.slug) %>" 
	data-lat="<%= cycling_group.coordinates.lat %>" 
	data-lon="<%= cycling_group.coordinates.lon %>"
	data-kind="cycling_group"
	class="cycling-group-light row">

	<div class="details">
		<div class="pic">
			<% if cycling_group.picture.image.url.nil? %>
				<%= link_to image_tag("cycling_group_logo.png", :class => "rounded logo", :size => "80x80"), 'javascript:void(0);' %>
			<% else %>
				<%= link_to image_tag(cycling_group.picture.image.url, :class => "rounded logo", :size => "80x80"), 'javascript:void(0);' %>
			<% end %>
		</div>
		<div class="info">
			<p class="title"><%= cycling_group.name %></p>
			<p class="updated-at"><b><%= t('app.events.last_updated') %></b> <%= distance_of_time_in_words_to_now(cycling_group.updated_at) %></p>
			<div class="controls">
				<a class="btn btn-link details-for-group-from-profile" href="<%= discover_cycling_groups_path.concat("#/#{cycling_group.slug}") %>">
					<%= t('actions.details') %>
				</a>
				<a class="btn btn-small edit-group-from-profile" href="<%= discover_cycling_groups_edit_path(cycling_group) %>"><i class="icon icon-edit"></i><%= t('states.edit') %></a>
			</div>
		</div>
	</div>
	
</div>