<%= content_for(:section , t('app.cycling_groups.new.title')) %>
<%= content_for(:klass, 'cycling-groups') %>
<% content_for :map_behavior, "editable" %>
<% content_for :panel do %>	
	<div class="panel edit-mode">
		<div class="inner-panel">
			<%= render :partial => 'shared/notifications' %>
			
			<div class="form">
				<h2><%= t('app.cycling_groups.new.title') %></h2>
				
				<%= form_for @cycling_group, :html => {:class => "form new", :multipart => true} do |f| %>	
					<%= render :partial => 'form', :locals => {:cycling_group => @cycling_group, :f => f} %>
				<% end %>
			</div>
		</div>
		
		<ul class="nav nav-pills">
	  	<li class="active"><%= link_to t('actions.back_arrow').html_safe, :back %></li>
	  	<li>
					<a href="javascript:void(0);" class="minimize-view"><%= t('actions.toggle.hide') %></a>
					<a href="javascript:void(0);" class="maximize-view"><%= t('actions.toggle.show') %></a>
	  	</li>
	  	<li><%= link_to "<i class='icon icon-map-marker'></i> Ubicarme".html_safe, 'javascript:void(0);', :class => 'locate-me' %></li>
	  </ul>
	</div>
<% end %>