<div class="span12">
	<div class="actions-bar">
		<div class="pull-left">
			<p class="call-to-act">Descubre actividades ciclistas en</p>
			<div class="btn-group">
			  <button type="button" id="selected-city" class="btn btn-primary btn-small"><%= select_a_city(@city || user_city_or_default) %></button>
			  <button type="button" class="btn btn-primary dropdown-toggle btn-small" data-toggle="dropdown">
			    <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu" id="unselected-cities" role="menu">
			    <%= non_selected_cities_when_code_selected_is(@city || user_city_or_default) %>
			  </ul>
			
			</div>
			<p class="call-to-act">O cerca de ti</p>
			<div class="btn-group">
				<a class="btn btn-warning btn-small pull-right locate-me"><i class="icon icon-map-marker"></i> Ubicarme</a>
			</div>
		</div>
		<div class="pull-right">
			<%= image_tag('mini_spinner.gif', :class => "spinner") %>
		</div>
	</div>
</div>
