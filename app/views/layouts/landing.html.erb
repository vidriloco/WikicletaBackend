<!DOCTYPE html>
<html>
<head>
  <title><%= t('app.name') %></title>

	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
	<%= stylesheet_link_tag    "landing" %>
  <%= javascript_include_tag "landing" %>
  <%= csrf_meta_tags %>
	<%= render 'layouts/shared/fav_icons' %>
</head>
<body>
	
<div class="background-logo"></div>

<!-- Navbar
================================================== -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
			<%= link_to t('app.name'), root_path.concat('#/'), :class => "brand" %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="what-is"><%= link_to t('app.landing.navbar.what_is'), '#/what-is' %></li>
					<li class="register"><%= link_to t('app.landing.navbar.register'), '#/register' %></li>
					<li class="allies"><%= link_to t('app.landing.navbar.allies'), '#/allies' %></li>
					<li class="media_"><%= link_to t('app.landing.navbar.media'), '#/media' %></li>
					
				</ul>
				<ul class="nav pull-right">
					<li><%= link_to t('app.landing.navbar.explore'), trips_path %></li>
					<li>
						<a type="button" class="orange" href="<%= new_user_session_path %>">
							<i class="icon-user"></i> <%= t('app.landing.navbar.start') %>
						</a>
					</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
	<div class="span12 centered-text logo-container">
		<%= image_tag('landing.png') %>
	</div>
</div>
<div class="row-fluid">
	<div id="slider" class="span12 centered-text">
		<%= image_tag('city_layers_1.png', :id => "s-1", :class => "sprite") %>
		<%= image_tag('city_layers_2.png', :id => "s-2", :class => "sprint2 sprite") %>
		<%= image_tag('city_layers_3.png', :id => "s-3", :class => "sprint3 sprite") %>
		<%= image_tag('city_layers_4.png', :id => "s-4", :class => "sprint4 sprite") %>
		<%= image_tag('city_layers_5.png', :id => "s-5", :class => "sprint5 sprite") %>
		<%= image_tag('city_layers_6.png', :id => "s-6", :class => "sprint6 sprite") %>
		<%= image_tag('city_layers_7.png', :id => "s-7", :class => "sprint7 sprite") %>
		<%= image_tag('city_layers_8.png', :id => "s-8", :class => "sprint8 sprite") %>
		<%= image_tag('city_layers_9.png', :id => "s-9", :class => "sprint9 sprite") %>
		<%= image_tag('city_layers_10.png', :id => "s-10", :class => "sprint10 sprite") %>
		<%= image_tag('city_layers_11.png', :id => "s-11", :class => "sprint11 sprite") %>
		<%= image_tag('city_layers_12.png', :id => "s-12", :class => "sprint12 sprite") %>
	</div>
</div>

<div class="content-fluid">
	<div class="row-fluid">
		<div class="span3"></div>
		<div class="span6 adjust-margin"><%= yield %></div>
		<div class="span3"></div>
	</div>
</div>

<div class="footer">
	<p class="title orange"><%= t('app.name') %></p>
	<p class="with-love"><%= t('app.landing.footer.made_in_mexico').html_safe %></p>
	<ul>
		<li><%= link_to image_tag('social_tweet.png', :size => '25x25'), "http://www.twitter.com/wikicleta", :target => "_blank" %></li>
		<li><%= link_to image_tag('social_fb.png', :size => '25x25'), "http://www.facebook.com/pages/Wikicleta/305039579602752", :target => "_blank" %></li>
	</ul>
</div>

</body>
</html>