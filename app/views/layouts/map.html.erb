<!DOCTYPE html>
<html>
<head>
  <title>Ciudadio</title>

	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
	
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div id="notifications">
		<%= flash[:notice] || yield(:notices) %>
	</div>
	
	<div id="header">
		<div class="menu"></div>
		
		<div class="mini-header shadow-light rounded-bottom-5">
			<%= yield :header %>
		</div>
		
	</div>
	
	<%= yield :map_area %>

	<div style="width:100%; height:100%;" id="map" class="<%=yield(:map_classes)%> displays-points"></div>

</body>
</html>
