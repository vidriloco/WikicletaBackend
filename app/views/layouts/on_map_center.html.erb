<!DOCTYPE html>
<html>
<head>
  <title><%= t('app.name') %> : <%= yield :section %> </title>
	
  <%= stylesheet_link_tag  "application" %>

	<script type="text/javascript" src="http://maps.google.com/maps/api/js?libraries=geometry&sensor=true"></script>
	<%= javascript_include_tag "application_map" %>
  <%= csrf_meta_tags %>
	<%= render 'layouts/shared/fav_icons' %>
	<%= render 'layouts/shared/mix_panel' %>
</head>

<body>
	<%= render 'layouts/shared/commons' %>
	<div class="on-map-center"><%= render 'layouts/shared/navbar' %></div>
	<div class="<%= yield :klass %>">
		<div id="content-centered">
			<div class="background-logo"></div>	
			<%= yield :panel %>
		</div>
		<div id="map-container"><div id="map" class="show-only edit <%= yield :map_behavior %>"></div></div>
		<%= yield :free_content %>
	</div>
</body>

</html>
