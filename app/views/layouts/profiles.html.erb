<!DOCTYPE html>
<html>
<head>
  <title><%= t('app.name') %></title>
	  
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
	<%= stylesheet_link_tag    "profiles" %>
  <%= javascript_include_tag "profiles" %>
  <%= csrf_meta_tags %>
	<%= render 'layouts/shared/fav_icons' %>
	<%= render 'layouts/shared/mix_panel' %>
</head>
<body>
	<%= user_default_city %>
	<div class="background-logo"></div>
	<%= render 'layouts/shared/navbar' %>

	<div id="top-container" class="row-fluid top-spaced-70 profile">
		<div class="span1"></div>
		<div class="span2">
			<%= render :partial => 'layouts/profiles/main_user_info', :locals => {:user => @user} %>
			
			<div class="well menu">
				<ul class="nav nav-list">
		    	<li class="<%= on_path?(user_profile_path(@user.username)) %>">
						<%= link_to (user_signed_in? && current_user_equals(@user) ? 'Tu actividad' : 'Actividad'), user_profile_path(@user.username) %>
					</li>
		    	<li class="<%= on_path?(user_gear_path(@user.username)) %>">
						<%= link_to (user_signed_in? && current_user_equals(@user) ? 'Tu equipo' : 'Equipo'), user_gear_path(@user.username) %>
					</li>
					<% if user_signed_in? && current_user_equals(@user) %>
		    		<li class="nav-header">Configuraci√≥n</li>
						<li class="<%= on_path?(settings_profile_path) %>"><%= link_to 'Perfil', settings_profile_path %></li>
						<li class="<%= on_path?(settings_access_path) %>"><%= link_to 'Acceso', settings_access_path %></li>
					<% end %>
		    </ul>
			</div>		
		</div>
		<div class="span8">
			<%= render 'layouts/shared/notice' %>
			<%= yield %>
		</div>
		<div class="span1"></div>
	</div>


</body>
</html>