<% if flash[:notice] %>
<div class="row-fluid">
	<div class="span4"></div>
	<div class="span4"><div class="alert alert-success"><%= flash[:notice] %><button class="close" data-dismiss="alert" type="button">×</button></div></div>
	<div class="span4"></div>
</div>
<% end %>

<% if flash[:alert] %>
<div class="row-fluid">
	<div class="span4"></div>
	<div class="span4"><div class="alert alert-error"><%= flash[:alert] %><button class="close" data-dismiss="alert" type="button">×</button></div></div>
	<div class="span4"></div>
</div>
<% end %>