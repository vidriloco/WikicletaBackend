<% if user_signed_in? %>
	$('#main-box .follow').html("<%= escape_javascript(render 'places/representations/followers/action_link').html_safe %>");
	$('#main-box #tabbed-content').html("<%= escape_javascript(render 'places/representations/followers/listing').html_safe %>");
	$('#main-box #status-bar .followers').html("<%= escape_javascript(render 'places/representations/followers/count').html_safe %>");	
<% else %>
	$('#notifications').html("<%=  t('places.messages.error.login_required', :action => t('places.messages.error.complements.follow')) %>");
<% end %>
