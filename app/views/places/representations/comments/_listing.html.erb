<%= form_for places_comments_path(@place), :remote => true do |f| %>
	<%= f.text_area :content, :id => "place_comment", :name => "place_comment[content]" %>
	<%= f.submit t('actions.share') %>
<% end %>

<% if @place.place_comments.empty? %>
	<h3><%= t('places.subviews.show.comments.empty') %></h3>
<% else %>
	<%= render :partial => 'places/representations/comments/unit', :collection => @place.place_comments, :as => :comment %>
<% end %>