<div class="thumbnail span3 cycling-group">
	<div class="row span12 logo-container">
		<div class="span3"></div>
		<div class="span6"><%= image_tag(cycling_group.picture.image.url, :class => "rounded") %></div>
		<div class="span3"></div>
	</div>
	
	<div class="details">
		<p class="name"><%= cycling_group.name %></p>
		<p>
			<a href="https://twitter.com/share" class="twitter-share-button" data-text="Rodada bicitekas" data-via="wikicleta" data-lang="es" data-related="bicitekas" data-hashtags="ruedaPorTuCiudad">Twittear</a>
			<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
		</p>
		<p class="info"><%= cycling_group.details %></p>
		<div class="timings">
			<p class="meeting-time"><span class="verb"><%= t('cycling_groups.views.list.meeting_at') %></span> <%= cycling_group.meeting_time %> hrs</p>
			<p class="departing-time"><span class="verb"><%= t('cycling_groups.views.list.departing_at') %></span> <%= cycling_group.departing_time %> hrs</p>
		</div>
	</div>
	
	<div class="contact row-fluid">
		<div class="contact-channel">
			<div class="span3"><%= image_tag('twitter-icon.png', :size => '25x25') %></div>
			<div class="span9"><%= link_to("@#{cycling_group.twitter_account}", "http://www.twitter.com/#{cycling_group.twitter_account}", :target => "_new") %></div>
		</div>
		<div class="contact-channel">
			<div class="span3"><%= image_tag('facebook-icon.png', :size => '25x25') %></div>
			<div class="span9"><%= link_to('Facebook', cycling_group.facebook_url, :target => "_new") %></div>
		</div>
		<div class="contact-channel">
			<div class="span3"><%= image_tag('web-icon.png', :size => '25x25') %></div>
			<div class="span9"><%= link_to('Sitio web', cycling_group.website_url, :target => "_new") %></div>
		</div>
	</div>
	<div class="separator"></div>
	<div class="actions row-fluid">
		<ul>
			<li><%= link_to ('Ver en el mapa'), '' %></li>
			<li></li>
		</ul>
	</div>
</div>