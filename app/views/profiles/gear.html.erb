<% if current_user_equals(@user) %>
	<div class="row-fluid top-spaced-70">
		<div class="span10 actions pull-right">
			<div class="row-fluid">
				<h2>Por ahora solo puedes subir tu bici</h2>
				<h4>¡Presume tu bici!</h4>
				<br/>
				<p><%= link_to 'Añadir', new_bike_path, :class => 'btn btn-primary pull-right' %></p>
				
			</div>
		</div>
		
	</div>
<% else %>
	<div class="row-fluid top-spaced-70">
		<div class="span12 actions">
			<div class="row-fluid">
				<h2>Las bicis de <%= @user.username %></h2>
				<h4>Quizás está rentando o vendiendo una. Si no, ¡dale fav a la que te guste!</h4>
			</div>
		</div>
	</div>
<% end %>
<br/>
<div class="row-fluid">
	<%= subsection_with("Tu equipo: tus bicis y accesorios", "Su equipo: sus bicis y accesorios") %>
</div>

<div class="top-spaced">	
	<% if @bikes.empty? %>
		<div class="top-spaced">
			<h3 class="empty centered-text"><%= t('bikes.views.index.empty.message') %></h3>
			<p class="centered-text"><%= link_to t('bikes.views.index.empty.invite'), new_bike_path %></p>
		</div>
	<% else %>
		<div id="masonry" class="index centered">
			<% @bikes.each do |bike| %>
				<%= render :partial => 'bikes/bike', :locals => { :bike => bike, :showing_bike_owner => false } %>
			<% end %>
		</div>
	<% end %>
</div>
