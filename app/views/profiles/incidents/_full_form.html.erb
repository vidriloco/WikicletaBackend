<div class="span1"></div>
<div class="altering-view altering-incident span10">
	<div class="row-fluid">
		<ul class="nav nav-pills pull-left">
			<li class="active"><%= link_to t('actions.back_arrow').html_safe, user_profile_path(current_user.username).concat('#/incidents') %></li>
    </ul>
		<div class="pull-right">
			<h3><%= t("incidents.views.#{mode}.title") %></h3>
		</div>
	</div>
	<div class="row-fluid instruction">
		<div class="span6">
			<p>1. <%= t("incidents.views.#{mode}.steps.one") %></p>
		</div>
		<div class="span6">
			<a class="btn btn-inverse pull-right locate-me"><i class="icon icon-map-marker"></i> <%= t('actions.locate_me') %></a>
		</div>
	</div>
	<div id="map" class="show-only editable map-dimensions rounded-5 shadow-light"></div>
	<br/>
	<% if !current_user_has_bikes_to_report? %>
		<div id="bike-required-alert" class="alert alert-error ">
			<span><i class="icon-exclamation-sign"></i> Necesitas registrar tu bici para reportar su <b>robo</b> o <b>avería</b></span> 
			<%= link_to 'Añadir bici', profiles_new_bike_path, :class => "pull-right" %>
		</div>
	<% end %>
	
	<div class="row-fluid instruction">
		<div class="span6">
			<p>2. <%= t("incidents.views.#{mode}.steps.two") %></p>
		</div>
		<div class="span6">
			<div class="btn-group pull-right">
	    	<button class="btn btn-primary incident-selector current-incident" data-text="Tipo de incidente">Tipo de incidente</button>
	    	<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
	    		<span class="caret"></span>
	    	</button>
	    	<ul class="dropdown-menu incident-types">
		  		<li><%= link_to t('actions.none'), '#/none', "data-text" => t('actions.none'), :class => "incident-selector" %></li>
	    		<li><%= dropdown_link_for(:accident) %></li>
					<li><%= dropdown_link_for(:theft) %></li>
					<li><%= dropdown_link_for(:assault) %></li>
					<li><%= dropdown_link_for(:breakdown) %></li>
	    	</ul>
	    </div>
		</div>
	</div>
	
	<div id="active-form" class="form-horizontal">
		<%= render :partial => 'profiles/incidents/form', :locals => {:incident => @incident, :kind => Bike.category_symbol_for(:incidents, @incident.kind) } %>
	</div>
	
	<div class="hidden">
		<%= render :partial => 'profiles/incidents/form', :locals => {:incident => @incident, :kind => :theft } %>
		<%= render :partial => 'profiles/incidents/form', :locals => {:incident => @incident, :kind => :assault } %>
		<%= render :partial => 'profiles/incidents/form', :locals => {:incident => @incident, :kind => :accident } %>
		<%= render :partial => 'profiles/incidents/form', :locals => {:incident => @incident, :kind => :breakdown } %>
	</div>
</div>
<div class="span1"></div>