<div id="incidents" class="span12 section incidents">
	<% if current_user_equals(user) %>
		<div class="row-fluid">
			<div class="span10 actions">
				<div class="row-fluid">
					<h2>¿Te pasó algo?</h2>
					<h4>Reportalo y recibe ayuda de la comunidad</h4>
				</div>
			</div>
			<div class="span2 top-spaced">
				<div class="dropdown pull-right">	
					<a class="dropdown-toggle btn btn-primary" data-toggle="dropdown" href="#">Reportar</a>
				  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
						<li><%= link_to 'Accidente', new_profiles_incident_path.concat('#/accident') %></li>
						<li><%= link_to 'Robo de bici', new_profiles_incident_path.concat('#/theft') %></li>
						<li><%= link_to 'Asalto', new_profiles_incident_path.concat('#/assault') %></li>
						<li><%= link_to 'Averia', new_profiles_incident_path.concat('#/breakdown') %></li>
				  </ul>
				</div>
			</div>
		</div>
		<br/>
	<% end %>
	
	<div class="row-fluid">
		<div class="listing-view">
		<% if incidents.empty? %>
			<%= subsection_with(
				t('user_profiles.views.incidents.subsection.title.logged_out'),  
				t('user_profiles.views.incidents.subsection.title.logged_in')) %>
			<br/>
			<div class="centered-text well well-small">
				<p>No hay reportes que mostrar, lo cual es muy bueno</p>
			</div>
		<% else %>
			<%= subsection_with(
				t('user_profiles.views.incidents.subsection.title.logged_out'),  
				t('user_profiles.views.incidents.subsection.title.logged_in')) %>
			<div id="map" class="show-only edit map-dimensions shadow-light rounded-5"></div>
			<%= render :partial => 'profiles/incidents/incident', :collection => incidents, :locals => {:show_actions => true} %>
		<% end %>
		</div>
	</div>
	
	<%= render :partial => 'shared/modal_dialog', :locals => {:record => "incidente"} %>
</div>