<%= content_for(:section , t('app.routes.edit.title')) %>
<%= content_for(:klass, 'routes') %>
<% content_for :panel do %>	
	<div class="panel edit-mode">
		<div class="inner-panel">
			<%= render :partial => 'shared/notifications' %>
			
			<div class="form">
				<h2><%= t('app.routes.edit.title') %></h2>

				<div class="path hidden" data-path="<%= @route.to_points_list %>"></div>

				<%= form_for [:profiles, @route], :method => :put do |f| %>
					<%= render :partial => 'routes/form', :locals =>  {:f => f} %>
				<% end %>
			</div>
			
		</div>
		
		<ul class="nav nav-pills">
	  	<li class="active"><%= link_to t('actions.back_arrow').html_safe, user_profile_path(@user.username) %></li>
	  	<li>
					<a href="javascript:void(0);" class="minimize-view"><%= t('actions.toggle.hide') %></a>
					<a href="javascript:void(0);" class="maximize-view"><%= t('actions.toggle.show') %></a>
	  	</li>
	  	<li><%= link_to "<i class='icon icon-map-marker'></i> Ubicarme".html_safe, 'javascript:void(0);', :class => 'locate-me' %></li>
	  </ul>
	</div>
<% end %>