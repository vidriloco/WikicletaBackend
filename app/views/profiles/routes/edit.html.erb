<% content_for :panel do %>	
	<div class="top-spaced"></div>
	<div class="panel routes edit-mode">
		<div class="inner-panel inner-panel-big">
			<%= render :partial => 'shared/notifications' %>
			
			<div class="form-container">
				<h3><%= t('actions.edit') %></h3>
				<div class="separator"></div>
				<br/>

				<div class="path hidden" data-path="<%= @route.to_points_list %>"></div>

				<%= form_for [:profiles, @route], :method => :put do |f| %>

					<%= hidden_field_tag :path, '' %>

					<div class="row-fluid">
						<div class="span3 right-text">
							<%= f.label :name, t('activerecord.attributes.route.name') %>
						</div>
						<div class="span9">
							<%= f.text_field :name, :class=> "span12" %>
						</div>
					</div>

					<div class="row-fluid">
						<div class="span3 right-text">
							<%= f.label :details, t('activerecord.attributes.route.details') %>
						</div>
						<div class="span9">
							<%= f.text_area :details, :rows => 5, :class=> "span12" %>
						</div>
					</div>
					
					<div class="row-fluid">
						<div class="span3 right-text">
							<%= f.label :is_public, t('activerecord.attributes.route.is_public') %>
						</div>
						<div class="span9">
							<%= f.check_box :is_public %>
						</div>
					</div>

					<div class="row-fluid">	
						<div class="pull-right">
							<%= f.submit t('actions.save'), :class => "btn btn-info" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<div class="row-fluid actions">
			<a href="<%= profiles_user_route_path(@user.username, @route) %>"><%= t('actions.back_arrow').html_safe %></a>
			<span class="togglers">
				<a href="javascript:void(0);" class="minimize-view"><%= t('actions.toggle.hide') %></a>
				<a href="javascript:void(0);" class="maximize-view"><%= t('actions.toggle.show') %></a>
			</span>
			<span class="activity label label-warning"><%= t('actions.edit') %></span>
		</div>
	</div>
<% end %>