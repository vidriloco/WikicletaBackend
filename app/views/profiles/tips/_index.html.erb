<div id="tips" class="span12 section tips">
	<% if current_user_equals(user) %>
		<div class="row-fluid">
			<div class="span10 actions">
				<div class="row-fluid">
					<h2>Deja un tip</h2>
					<h4>Puede ser que a otro ciclista le sea de utilidad</h4>
				</div>
			</div>
			<div class="span2 top-spaced">
				<div class="pull-right">
					<%= link_to t('user_profiles.views.tips.new'), new_profiles_tip_path, :class => 'btn btn-primary' %>
				</div>
			</div>
		</div>
		<br/>
	<% end %>
	
	<div class="row-fluid">
		<div class="listing-view">		
			<% if tips.empty? %>
				<%= subsection_with(
					t('user_profiles.views.tips.subsection.title.logged_out'),  
					t('user_profiles.views.tips.subsection.title.logged_in')) %>
				<br/>
				<div class="centered-text well">
					<p>No hay tips por ahora, quizás alguien debe salir más en bici :)</p>
				</div>
			<% else %>
					<%= subsection_with(
						t('user_profiles.views.tips.subsection.title.logged_out'),  
						t('user_profiles.views.tips.subsection.title.logged_in')) %>
					<div id="map" class="show-only edit map-dimensions shadow-light rounded-5"></div>
					<%= render :partial => 'profiles/tips/tip', :collection => tips, :locals => {:show_actions => true} %>
			<% end %>
		</div>
	</div>
	
	<%= render :partial => 'shared/modal_dialog', :locals => {:record => "tip"} %>
</div>