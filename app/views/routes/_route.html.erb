<div id="<%= route.id %>" class="route">
	<p class="title"><%= route.name %></p>
	<p><%= route.details %></p>
	<div class="path hidden" data-path="<%= route.to_points_list %>"></div>
	<div class="row-fluid">
		<div class="pull-right">
			<% if mode.eql?(:edit) %>
				<a class="btn btn-small btn-warning" href="<%= edit_route_path(route) %>"><i class="icon icon-edit"></i> <%= t('states.edit') %></a>
				<%= link_to t('actions.delete'), route_path(route), :method => :delete, :class => "btn btn-danger", :confirm => "Â¿Eliminar?" %>
			<% else %>
				<a class="btn btn-small btn-info" href="<%= route_path(route) %>"><%= t('actions.details') %></a>
			<% end %>
		</div>
	</div>
</div>