<% content_for :panel do %>	
	<div class="top-spaced"></div>
	<div class="panel routes edit-mode">
		<div class="inner-panel inner-panel-big">
			<%= render :partial => 'shared/notifications' %>
			
			<div class="form-container">
				<h3><i class="icon-edit"></i> <%= t('app.routes.actions.creating') %></h3>
				
				<div class="separator"></div>
				<br/>

				<div class="path hidden" data-path="<%= @route.to_points_list %>"></div>

				<%= form_for @route do |f| %>
					<%= render :partial => 'profiles/routes/form', :locals =>  {:f => f} %>
				<% end %>
			</div>
		</div>
		<div class="actions">
			<%= link_to t('actions.back_arrow').html_safe, :back %>
			<span class="togglers">
				<a href="javascript:void(0);" class="minimize-view"><%= t('actions.toggle.hide') %></a>
				<a href="javascript:void(0);" class="maximize-view"><%= t('actions.toggle.show') %></a>
			</span>
			<span class="activity label label-warning"><%= t('app.routes.actions.creating') %></span>			
			<p class="pull-right">
				<%= link_to "<i class='icon icon-map-marker'></i> Ubicarme".html_safe, 'javascript:void(0);', :class => 'locate-me' %>
			</p>
		</div>
	</div>
<% end %>