<% if object.errors.any? %>
  <div class="top-spaced">
		<div class=" alert alert-error">
			<p class="title"><%= message %>:</p>
			<ul>
	    <% object.errors.each do |msg| %>
				<% if msg == :base %>
					<% object.errors[:base].each do |error| %>
						<li><%= error %></li>
					<% end %>
				<% else %>
					<% object.errors.each do |error| %>
						<li><b><%= t("models.#{object.class.to_s.underscore.downcase}.#{error}") %></b> <%= object.errors[error][0] %></li>
					<% end %>
				<% end %>

	    <% end %>
	    </ul>
		</div>
  </div>
<% end %>
