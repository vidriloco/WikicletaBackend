<% if object.errors.any? %>
  <div id="error_explanation" class="rounded-5">
    <h2><%= message %></h2>

    <ul>
    <% object.errors.each do |msg| %>
			<% if msg == :base %>
					<% object.errors[:base].each do |error| %>
						<li><%= error %></li>
					<% end %>
			<% end %>
      
    <% end %>
    </ul>
  </div>
<% end %>