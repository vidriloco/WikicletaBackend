<div class="top-spaced"></div>
<h3 class="centered-text">Recorridos en tu ciudad</h3>
<div class="separator"></div>

<%= render :partial => 'trips/menu', :locals => {:selected_city_code => @city.code} %>
<div class="top-spaced"></div>

<% if @city.trips.empty? %>
	<div class="row-fluid top-spaced">
		<div class="span12">
			<p class="centered-text"><%= image_tag('empty_trip.png') %></p>
			<h3 class="empty centered-text"><%= t('trips.views.index.empty.message', :city => @city.name) %></h3>
			<p class="centered-text"><%= t('trips.views.index.empty.suggest', :mail => "<a href='mailto:mejora@wikicleta.com'>mejora@wikicleta.com</a>").html_safe %></p>	
		</div>
	</div>
<% else %>
	<div class="row-fluid neighbourhoods centered-text top-spaced">
			<% @city.trips.each_slice(3) do |three_group| %>
				<div class="content centered span12">
					<% three_group.each do |trip| %>
						<%= render trip %>
					<% end %>
				</div>
			<% end %>
	</div>
<% end %>

<% if @city.code.eql?("mx_df") %>
	<div class="top-spaced"></div>
	<h3 class="centered-text">Pr√≥ximamente</h3>
	<div class="separator"></div>

	<%= render 'future' %>
<% end %>

