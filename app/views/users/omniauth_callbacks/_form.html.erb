<div class="with-aligned-inputs">
	<%= devise_error_messages! %>
	<br/>
	<% if provider_is?(:twitter) %>
		<p><b><%= t('user_accounts.registrations.oauth.missing_field', :field => t('activerecord.attributes.user.email').downcase) %></b></p>
		<div>
	  	<%= f.email_field :email, :placeholder => t('activerecord.attributes.user.email') %>
		</div>
	<% end %>
	<% if provider_is?(:facebook) %>
		<p><b><%= t('user_accounts.registrations.oauth.missing_field', :field => t('activerecord.attributes.user.username').downcase) %></b></p>
		<div>
	  	<%= f.text_field :username, :placeholder => t('activerecord.attributes.user.username') %>
		</div>
	<% end %>
	
	<br/>
	<p><b><%= t('user_accounts.registrations.oauth.retrieved_fields') %></b></p>
	
	<div>
		<%= f.label :full_name %>
		<%= f.text_field :full_name %>
	</div>

	<% unless provider_is?(:facebook) %>
		<div><%= f.label :username %>
	  <%= f.text_field :username %></div>
	<% end %>

	<% unless provider_is?(:twitter) %>
		<div><%= f.label :email %>
	  <%= f.email_field :email %></div>
	<% end %>
</div>
