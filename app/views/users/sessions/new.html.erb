<div class="board rounded-5 shadow-light">
	<h2><%=t "user_accounts.sessions.new.title" %></h2>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="styled-form green">
		  <%= f.text_field :login, :placeholder => t('activerecord.attributes.user.login'), :size => 32 %>
		  <%= f.password_field :password, :placeholder => t('activerecord.attributes.user.password'), :size => 32 %>	  	
		</div>
		<%= f.submit t("user_accounts.sessions.new.start"), :class => 'button blue', :id => "login" %>
		
	<% end %>
	<div class="separator"></div>
	<ul>
		<li><%= link_to t("user_accounts.forgot_password"), account_recover_password_path %></li>
		<li><%= link_to t("user_accounts.sessions.new.sign_up"), sign_up_path %></li>
	</ul>
	
</div>

<div class="connects">
	<%= link_to '', user_omniauth_authorize_path(:twitter), :class => "twitter-sign-in", :id => "twitter_sign_in" %>
	<%= link_to '', user_omniauth_authorize_path(:facebook), :class => "facebook-sign-in", :id => "facebook_sign_in" %>
</div>

