<div class="row-fluid">
	<div class="span3"></div>
	<div class="span6">
		<div class="board rounded-5 shadow-light">
			<h2><%=t "user_accounts.sessions.new.title" %></h2>
			<div class="separator"></div>
			<div class="row-fluid login-strategies">
				<div class="span8 user-plain">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
						<div class="span11">
							<div class="control-group">
					    	<label class="control-label"><i class="icon-user"></i></label>
					    	<div class="controls">
					    		<%= f.text_field :login, :placeholder => t('activerecord.attributes.user.login'), :size => 32 %>
					    	</div>
							</div>
							<div class="control-group">
					    	<label class="control-label"><i class="icon-lock"></i></label>
					    	<div class="controls">
								  <%= f.password_field :password, :placeholder => t('activerecord.attributes.user.password'), :size => 32 %>	  	
					    	</div>
							</div>
						</div>
						<div class="row-fluid">
							<div class="span4"><%= f.submit t("user_accounts.sessions.new.start"), :class => 'btn btn-primary pull-right' %></div>
						</div>
					<% end %>
				</div>
				<div class="span4 social-nets centered-text rounded-5">
					<p class="subtitle">Via:</p>
					<%= link_to '', user_omniauth_authorize_path(:twitter), :class => "twitter-sign-in centered", :id => "twitter_sign_in" %>
					<%= link_to '', user_omniauth_authorize_path(:facebook), :class => "facebook-sign-in centered", :id => "facebook_sign_in" %>
				</div>
			</div>
			
			<div class="separator"></div>
			<div class="row-fluid action-links">
				<div class="span6">
					<%= link_to t("user_accounts.forgot_password"), account_recover_password_path %>
				</div>
				<div class="span6">
					<%= link_to t("user_accounts.sessions.new.sign_up"), sign_up_path %>
				</div>
			</div>
		</div>
	</div>

</div>



