<h2><%=t "user_accounts.sessions.new.title" %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :login %><br />
  <%= f.text_field :login %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit t("user_accounts.sessions.new.start") %></div>
<% end %>

<%= link_to t('user_accounts.omniauth.login', :network => "Twitter"), user_omniauth_authorize_path(:twitter) %>
<%= link_to t('user_accounts.omniauth.login', :network => "Facebook"), user_omniauth_authorize_path(:facebook) %>

<%= link_to t("user_accounts.forgot_password"), account_recover_password_path %>
<%= link_to t("user_accounts.sessions.new.sign_up"), sign_up_path %><br />
