			<p class="subtitle text-center"><%= t('app.views.landing.download.stickers') %></p>
			<%= link_to image_tag('stickers.png', :size => '280x280'), 'https://drive.google.com/a/wikicleta.com/file/d/0B1lCNtgccrdncGNHbzI1S2pCTUU/edit?usp=sharing', :target => "_blank"  %>
		</div>
	</div>
</div>