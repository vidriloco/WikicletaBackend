<div class="section" data-anchor="download">
	<div class="right-positioned">
		<%= link_to image_tag('next_blue.png', :size => '100x100'), '#friends' %>
	</div>
	<%= image_tag('download_icon.png', :class => 'top-left-positioned') %>
	
	<div class="container">
		<p class="title text-center"><%= t('app.views.landing.download.title') %></p><br/>
